        <p><strong>No Syarikat:</strong> <?= htmlspecialchars($user['no_syarikat']) ?></p>
        <p><strong>Lokasi Kutipan:</strong> <?= htmlspecialchars($user['lokasi_kutipan']) ?></p>
        <p><strong>Jenis Barang Dikumpul:</strong> <?= htmlspecialchars($user['jenis_barang']) ?></p>
        <hr>
